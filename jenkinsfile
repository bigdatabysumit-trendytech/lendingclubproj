pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               sh 'pip3 install --user pipenv'
               sh 'pipenv --rm || exit 0'
               sh 'pipenv install'
            }
        }
        stage('Test') {
            steps {
               echo 'test completed successfullyyy'
            }
        }
        stage('Package') {
            steps {
               echo 'package completed successfully'
            }
        }
	
    }
}
